<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lens_round_rect_light"
    >


    <TextView
        android:id="@+id/panel_ac_info_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/lens_debug_thumb"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Object "
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/panel_ac_view_click"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/lens_round_rect_light"
        android:textColor="@color/black_051b28"
        android:gravity="center"
        android:padding="4dp"
        android:text="模拟点击" />






</LinearLayout>


